<!DOCTYPE html>
<html lang="zh-TW">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>捷運大富翁</title>
    <link rel="stylesheet" href="assets/css/index.css">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css"
          integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
    <script src="https://code.jquery.com/jquery-3.5.1.min.js"
            integrity="sha256-9/aliU8dGd2tb6OSsuzixeV4y/faTqgFtohetphbbj0=" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js"
            integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q"
            crossorigin="anonymous"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js"
            integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl"
            crossorigin="anonymous"></script>
    <script src="./assets/js/jquery.rwdImageMaps.js"></script>
    <link rel="icon" href="./images/favicon.ico">
    <script>
        $(document).ready(function (e) {
            $('img[usemap]').rwdImageMaps();
        });
    </script>
</head>
<body>
<header>
    <nav id="nav">
        <h1 id="xeki">各隊動態</h1>
    </nav>
    <p id="demo"></p>
    <button id="reload" onclick="getLocation()">重新定位</button>
</header>
<main>
    <div class="container">
        <div class="row">
            <p class="team col-6"><b>隊伍</b></p>
            <p class="teameki col-3"><b>位置</b></p>
            <p class="teampoint col-3"><b>分數</b></p>
            <%for(let i=0;i<4;i++){%>
            <p class="team col-6"><%=team[i]%></p>
            <p class="teameki col-3"><%=teameki[i]%></p>
            <p class="teampoint col-3"><%=teampoint[i]%></p>
            <%}%>
        </div>
    </div>
</main>
<footer class="container" id="foot">
    <ul class="ful row">
        <li class="flist col-12"><a class="flist" href="/"><img class="focon" src="images/icons/home.png"><br>回首頁</a></li>
    </ul>
</footer>
<script>
    const x = document.getElementById("demo");
    const nav = document.getElementById("nav");
    const len = <%= len %> ;
    const lati = <%- JSON.stringify(latitude) %>
    const long = <%- JSON.stringify(longitude) %>;
    const bgc = <%- JSON.stringify(bgc) %>;
    //抓定位↓
    if (navigator.geolocation) {
        navigator.geolocation.getCurrentPosition(showPosition, showError);
    } else {
        nav.style.backgroundColor = "gray";
    }


    function getLocation() {
        if (navigator.geolocation) {
            navigator.geolocation.getCurrentPosition(showPosition, showError);
        } else {
            nav.style.backgroundColor = "gray";
        }
    }

    function showPosition(position) {
        let latitude = position.coords.latitude;
        let longitude = position.coords.longitude;
        x.innerHTML = "LAT: " + latitude +
            ", LONG: " + longitude;

        for (let i = 0; i < len; i++) {
            let ilatitude = lati[i];
            let ilongitude = long[i];
            let ibgc = bgc[i];
            if ((latitude + 0.003) >= ilatitude && (latitude - 0.003) <= ilatitude) {
                if ((longitude + 0.003) >= ilongitude && (longitude - 0.003) <= ilongitude) {
                    nav.style.background = ibgc;
                    break;
                } else {
                    nav.style.backgroundColor = "gray";
                }
            } else {
                nav.style.backgroundColor = "gray";
            }
        }


    }


    function showError(error) {
        switch (error.code) {
            case error.PERMISSION_DENIED:
                nav.style.backgroundColor = "gray";
                break;
            case error.POSITION_UNAVAILABLE:
                nav.style.backgroundColor = "gray";
                break;
            case error.TIMEOUT:
                nav.style.backgroundColor = "gray";
                break;
            case error.UNKNOWN_ERROR:
                nav.style.backgroundColor = "gray";
                break;
        }
    }

    //抓定位↑
</script>
</body>
</html>
